    @section Scripts {
        <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#shopList').DataTable({
                    "order": [[3, "desc"]]
                });
            })
            $("#createShop").on('click', function () {
                //ajax request
                $.ajax({
                    url: '/shops/create',
                    type: 'get'
                }).done(function (data) {
                    $("#modalBody").html(data);
                    $("#myModalLabel").html("Shop - Create");
                    $('#myModal').modal('show');
                }).fail(function (err) {
                    alert(err);
                });
            });
        </script>
    }
</div>