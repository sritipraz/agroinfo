@model Agroin4.Models.UserRolesViewModel

@{
    ViewBag.Title = "AddUserToRoles";
    var selectedValues = (ViewData["Roles"] as IEnumerable<SelectListItem>).Where(p => p.Selected).Select(p => p.Value);
}

<h2>AddUserToRoles</h2>

